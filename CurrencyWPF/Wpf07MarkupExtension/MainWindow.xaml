<Window x:Class="Wpf07MarkupExtension.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:util="clr-namespace:ConceptArchitect.Wpf;assembly=ConceptArchitect.Wpf"
        xmlns:local="clr-namespace:Wpf07MarkupExtension"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Displaying Currency using Value Property"  FontSize="18" TextAlignment="Center"/>
        <TextBlock FontSize="20" FontWeight="Bold"  Text="{util:Currency Value=2000,Symbol=$}"/>


        <TextBlock FontSize="20" FontWeight="Bold"  Text="{util:Currency Value=4000}"/>



    </StackPanel>
</Window>
